{
	"apiVersion": 2,
	"name": "gamblino-block/image",
	"version": "1.0.0",
	"title": "Block Image",
	"category": "gamblino",
	"icon": "smiley",
	"description": "Just a simple Gamblino Image Block",
	"keywords": ["gamblino", "image", "preview"],
	"supports": {
		"html": false,
		"align": ["wide", "full"]
	},

	"textdomain": "block-gamblino",
	"attributes": {
		"id": {
			"type": "number"
		},
		"url": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "src"
		},
		"alt": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "alt",
			"default": ""
		},
		"imageDimension": {
			"type": "string",
			"default": "100%"
		},
		"imageSizeVariant": {
			"type": "string",
			"default": "primary"
		},
		"displayPosition": {
			"type": "array",
			"default": ["Static", "Relative", "Absolute"]
		},
		"positionType": {
			"type": "string",
			"default": "static"
		},
		"positionValue": {
			"type": "object",
			"default": {
				"top": 0,
				"left": 0,
				"right": 0,
				"bottom": 0
			}
		},
		"marginUnitArray": {
			"type": "array",
			"default": ["px", "em", "rem"]
		},
		"marginUnit": {
			"type": "string",
			"default": "px"
		},
		"margin": {
			"type": "object",
			"default": {
				"top": 0,
				"right": 0,
				"bottom": 0,
				"left": 0
			}
		}
	},
	"editorScript": "file:../../../../build/block-image.js",
	"editorStyle": "file:../../../../build/block-image.css",
	"style": "file:../../../../build/style-block-image.css"
}
