{
	"apiVersion": 2,
	"name": "gamblino-block/insert-review",
	"version": "1.0.0",
	"title": "Block Insert Review",
	"category": "gamblino",
	"icon": "smiley",
	"description": "Gamblino Info Bonus Review Block",
	"keywords": ["gamblino", "bonus", "info", "review", "insert"],
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"padding": true
		},
		"classname": false
	},
	"textdomain": "block-gamblino",
	"attributes": {
		"title": {
			"type": "string",
			"source": "html",
			"selector": "h2"
		},
		"description": {
			"type": "string",
			"source": "html",
			"selector": "p"
		},
		"lists": {
			"type": "array",
			"selector": ".block-insert-review__lists li",
			"source": "query",
			"default": [],
			"query": {
				"content": {
					"type": "string",
					"source": "html",
					"selector": "p"
				}
			}
		},
		"buttonText": {
			"type": "string",
			"source": "html",
			"selector": "a",
			"default": ""
		},
		"shadow": {
			"type": "boolean",
			"default": false
		},
		"shadowOpacity": {
			"type": "number",
			"default": 30
		},
		"style": {
			"type": "object",
			"default": {
				"backgroundColor": {
					"type": "string"
				},
				"color": {
					"type": "string"
				},
				"spacing": {
					"padding": {
						"top": "1em",
						"right": "1em",
						"bottom": "1em",
						"left": "1em"
					}
				}
			}
		}
	},
	"editorScript": "file:../../../build/block-insert-review.js",
	"editorStyle": "file:../../../build/block-insert-review.css",
	"style": "file:../../../build/style-block-insert-review.css"
}
